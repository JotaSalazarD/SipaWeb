@{
    ViewData["Title"] = "Clientes";
}
<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Clientes</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.5/jquery.inputmask.min.js"></script>
</head>
<body>
    <form asp-action="ProcesarFormulario" method="post">
        <h2>Formulario de Clientes</h2>
        <label for="CiudadOrigen">Ciudad de Origen:</label>
        <input type="text" name="Ciudad" id="Ciudad">

        <!-- Contenedor de sugerencias con estilos mejorados -->
        <div id="sugerencias" class="sugerencias-container"></div>

        <!-- Resto del formulario (igual que en los ejemplos anteriores) -->

    <style>
        .sugerencias-container {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            position: absolute;
            max-height: 150px;
            overflow-y: auto;
            z-index: 1;
        }

            .sugerencias-container div {
                padding: 10px;
                border-bottom: 1px solid #ccc;
                cursor: pointer;
            }

                .sugerencias-container div:last-child {
                    border-bottom: none;
                }
    </style>


        <label for="Q2">Cuántos días de viaje?</label>
        <input type="text" name="Dias" id="Dias">

        <label for="Q3">Presupuesto</label>
        <input type="text" name="Presupuesto" id="Presupuesto" class="currency-input">
        



        <label for="Q4">Cuántos adultos son?</label>
        <select name="Adultos" id="Adultos">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <label for="Q5">Niños</label>
        <select name="Ninos" id="Ninos">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <label for="Q6">Clima de preferencia</label>
        <select name="Clima" id="Clima">
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>


        <label for="Q7">Intereses</label>
        <div class="interests-container">
            <div class="column">
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="cultura" id="cultura">
                    <label for="cultura">Cultura</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="negocios" id="negocios">
                    <label for="negocios">Negocios</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="gastronomia" id="gastronomia">
                    <label for="gastronomia">Gastronomía</label>
                </div>
            </div>
            <div class="column">
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="deportes" id="deportes">
                    <label for="deportes">Deportes</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="naturaleza" id="naturaleza">
                    <label for = "naturaleza">Naturaleza</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="familia" id="familia">
                    <label for="familia">Familia</label>
                </div>
            </div>
            <div class="column">
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="aventura" id="aventura">
                    <label for="aventura">Aventura</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="playa" id="playa">
                    <label for="playa">Playa</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="montaña" id="montaña">
                    <label for="montaña">Montaña</label>
                </div>
            </div>
            <div class="column">
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="fiestas" id="fiestas">
                    <label for="fiestas">Fiestas</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="teatro" id="teatro">
                    <label for="teatro">Teatro</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" name="InteresesSeleccionados[]" value="compras" id="compras">
                    <label for="compras">Compras</label>
                </div>
            </div>
        </div>
       




        <br />

            <button type="submit" class="btn btn-primary">Guardar</button>


    </form>

    <script>
        const ciudadesColombia = ["Bogotá", "Medellín", "Cali", "Barranquilla", /* Agrega más ciudades aquí */];

        const ciudadOrigenInput = document.getElementById("CiudadOrigen");
        const sugerenciasContainer = document.getElementById("sugerencias");

        ciudadOrigenInput.addEventListener("input", () => {
            const inputValue = ciudadOrigenInput.value.toLowerCase();
            sugerenciasContainer.innerHTML = "";

            const sugerencias = ciudadesColombia.filter(ciudad => ciudad.toLowerCase().includes(inputValue));
            sugerencias.forEach(sugerencia => {
                const option = document.createElement("div");
                option.textContent = sugerencia;
                option.addEventListener("click", () => {
                    ciudadOrigenInput.value = sugerencia;
                    sugerenciasContainer.innerHTML = "";
                });
                sugerenciasContainer.appendChild(option);
            });
        });
    </script>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const interesesForm = document.getElementById("Intereses[]");
            const interesesCheckboxes = interesesForm.querySelectorAll("input[type=checkbox]");
            const interesesConcatenadosInput = document.getElementById("InteresesConcatenados");

            interesesForm.addEventListener("submit", function (event) {
                event.preventDefault(); // Evita que el formulario se envíe normalmente

                const interesesSeleccionados = Array.from(interesesCheckboxes)
                    .filter(checkbox => checkbox.checked)
                    .map(checkbox => checkbox.value);

                const interesesConcatenados = interesesSeleccionados.join(", ");
                interesesConcatenadosInput.value = interesesConcatenados;

                // Continúa aquí con el envío del formulario si es necesario
                // interesesForm.submit();
            });
        });
    </script>

        


<script>
$(document).ready(function() {
    // Aplicar la máscara de moneda al campo de presupuesto
    $('.currency-input').inputmask({
        alias: 'numeric',
        autoGroup: true,
        groupSeparator: ',',
        digits: 2,
        digitsOptional: false,
        prefix: '$',
        rightAlign: false
    });
});
</script>


</body>


</html>

