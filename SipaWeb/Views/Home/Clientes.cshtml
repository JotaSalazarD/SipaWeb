@{
    ViewData["Title"] = "Clientes";
}
<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Clientes</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.5/jquery.inputmask.min.js"></script>
</head>
<body>
    <div class="container">
        <form asp-action="ProcesarFormulario" method="post">
            <div class="row">
                <div class="col-12">
                    <h2>Formulario de Clientes</h2>
                    <hr />
                </div>

                <div class="col-12 col-md-6 form-floating mb-3">
                        <input type="text" name="Ciudad" id="Ciudad" class="form-control" placeholder="Ciudad de origen">
                        <label for="Ciudad">Ciudad de Origen:</label>
                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" name="Dias" id="Dias" placeholder="Cuántos días de viaje?" class="form-control">
                    <label for="Dias">Cuántos días de viaje?</label>
                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" name="Presupuesto" id="Presupuesto" class="form-control" placeholder="Presupuesto">
                    <label for="Presupuesto">Presupuesto</label>
                </div>
              
                <div class="col-12 col-md-6 form-floating mb-3">
                    <select name="Adultos" id="Adultos" class="form-select">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <label for="Adultos">Cuántos adultos son?</label>
                </div>

                <div class="col-12 col-md-6 form-floating mb-3">
                    <select name="Ninos" id="Ninos" class="form-select">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <label for="Ninos">Niños</label>
                </div>
                
                <div class="col-12 col-md-6 form-floating mb-3">
                    <select name="Clima" id="Clima" class="form-select">
                        <option value="Sí">Sí</option>
                        <option value="No">No</option>
                    </select>
                    <label for="Clima">Clima de preferencia</label>
                </div>

                <div class="col-12 col-md-6">
                    <h3 for="Q7">Intereses</h3>
                    <hr />
                </div>
                <div class="col-12">
                     
                     <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="cultura" id="cultura" class="form-check-input">
                        <label class="form-check-label" for="cultura">Cultura</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="negocios" id="negocios" class="form-check-input">
                        <label for="negocios" class="form-check-label">Negocios</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="gastronomia" id="gastronomia" class="form-check-input">
                        <label for="gastronomia"  class="form-check-label">Gastronomía</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="deportes" id="deportes"  class="form-check-input">
                        <label for="deportes" class="form-check-label">Deportes</label>
                    </div>
                    <div class="form-check form-check-inline">
                         <input type="checkbox" name="InteresesSeleccionados[]" value="naturaleza" id="naturaleza"  class="form-check-input">
                        <label for="naturaleza" class="form-check-label">Naturaleza</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="familia" id="familia"  class="form-check-input">
                        <label for="familia" class="form-check-label">Familia</label>
                    </div>

                </div>

                <div class="col-12 mb-3">

                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="aventura" id="aventura"  class="form-check-input">
                        <label for="aventura" class="form-check-label">Aventura</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="playa" id="playa"  class="form-check-input">
                        <label for="playa">Playa</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="montaña" id="montaña"  class="form-check-input">
                        <label for="montaña" class="form-check-label">Montaña</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="fiestas" id="fiestas"  class="form-check-input">
                        <label for="fiestas" class="form-check-label">Fiestas</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="teatro" id="teatro"  class="form-check-input">
                        <label for="teatro" class="form-check-label">Teatro</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" name="InteresesSeleccionados[]" value="compras" id="compras"  class="form-check-input">
                        <label for="compras" class="form-check-label">Compras</label>
                    </div>
               
            </div>


                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>

               </div>
         </div>

        </form>
    </div>
   

    <script>
        const ciudadesColombia = ["Bogotá", "Medellín", "Cali", "Barranquilla", /* Agrega más ciudades aquí */];

        const ciudadOrigenInput = document.getElementById("CiudadOrigen");
        const sugerenciasContainer = document.getElementById("sugerencias");

        ciudadOrigenInput.addEventListener("input", () => {
            const inputValue = ciudadOrigenInput.value.toLowerCase();
            sugerenciasContainer.innerHTML = "";

            const sugerencias = ciudadesColombia.filter(ciudad => ciudad.toLowerCase().includes(inputValue));
            sugerencias.forEach(sugerencia => {
                const option = document.createElement("div");
                option.textContent = sugerencia;
                option.addEventListener("click", () => {
                    ciudadOrigenInput.value = sugerencia;
                    sugerenciasContainer.innerHTML = "";
                });
                sugerenciasContainer.appendChild(option);
            });
        });
    </script>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const interesesForm = document.getElementById("Intereses[]");
            const interesesCheckboxes = interesesForm.querySelectorAll("input[type=checkbox]");
            const interesesConcatenadosInput = document.getElementById("InteresesConcatenados");

            interesesForm.addEventListener("submit", function (event) {
                event.preventDefault(); // Evita que el formulario se envíe normalmente

                const interesesSeleccionados = Array.from(interesesCheckboxes)
                    .filter(checkbox => checkbox.checked)
                    .map(checkbox => checkbox.value);

                const interesesConcatenados = interesesSeleccionados.join(", ");
                interesesConcatenadosInput.value = interesesConcatenados;

                // Continúa aquí con el envío del formulario si es necesario
                // interesesForm.submit();
            });
        });
    </script>

        


<script>
$(document).ready(function() {
    // Aplicar la máscara de moneda al campo de presupuesto
    $('.currency-input').inputmask({
        alias: 'numeric',
        autoGroup: true,
        groupSeparator: ',',
        digits: 2,
        digitsOptional: false,
        prefix: '$',
        rightAlign: false
    });
});
</script>


</body>


</html>

